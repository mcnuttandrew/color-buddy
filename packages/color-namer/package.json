{
  "name": "color-buddy-color-namer",
  "version": "0.0.7",
  "type": "module",
  "main": "dist/color-namer.js",
  "scripts": {
    "build": "tsc && npm run swap && vite build && npm run swap",
    "test": "NODE_ENV=development vitest run",
    "test:prod": "vitest run",
    "test:watch": "vitest",
    "swap-exports": "jq '.exports |= {default: .[\"lib-build\"], \"lib-build\": .default}' package.json > temp.json && mv temp.json package.json"
  },
  "dependencies": {
    "color-buddy-palette": "*"
  },
  "devDependencies": {
    "typescript": "^5.5.3",
    "vite-plugin-dts": "^4.0.0-beta.1",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/mcnuttandrew/color-buddy",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "default": {
        "import": "./main.ts",
        "require": "./main.js"
      },
      "lib-build": {
        "types": "./dist/main.d.ts",
        "import": "./dist/color-namer.js",
        "require": "./dist/color-namer.umd.js"
      }
    }
  }
}
