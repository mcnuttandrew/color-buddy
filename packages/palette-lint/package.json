{
  "name": "@color-buddy/palette-lint",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "types": "tsc --noEmit --watch",
    "test:coverage": "vitest run --coverage",
    "gen-schema": "npx ts-json-schema-generator --path src/lint-language/lint-type.ts --type LintProgram > ./lint-schema.json --minify && vite-node scripts/pretty-schema.ts && mv lint-schema.json ../../apps/docs/docs/public/lint-schema.json"
  },
  "devDependencies": {
    "@types/color-namer": "^1.3.3",
    "rollup": "^4.18.0",
    "ts-json-schema-generator": "^1.5.0",
    "typescript": "^5.5.3",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@color-buddy/color-lists": "*",
    "@color-buddy/color-namer": "*",
    "@color-buddy/palette": "*",
    "fracturedjsonjs": "^4.0.1"
  }
}
